<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nail_bg"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="576dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp">

                <RelativeLayout
                    android:id="@+id/nailpulish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="46dp"
                    android:layout_marginLeft="46dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="498dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="34dp"
                        android:layout_marginLeft="34dp"
                        android:layout_marginEnd="59dp"
                        android:layout_marginRight="59dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="center"
                        android:text="Nailed it "
                        android:textColor="#F354A6"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/bungee_shade" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/deatails"
                    android:layout_width="391dp"
                    android:layout_height="505dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="68dp">

                    <EditText
                        android:id="@+id/putnamehere"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="80dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="42dp"
                        android:layout_marginEnd="98dp"
                        android:layout_marginRight="98dp"
                        android:layout_marginBottom="418dp"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Full name"
                        android:inputType="textPersonName"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/client_name"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="221dp"
                        android:layout_marginRight="221dp"
                        android:layout_marginBottom="465dp"
                        android:background=""
                        android:text="Enter your name"
                        android:textColor="#050300"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="380dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/putnamehere"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:id="@+id/polish_option"
                            android:layout_width="189dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="9dp"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="99dp"
                            android:layout_marginEnd="193dp"
                            android:layout_marginRight="193dp"
                            android:layout_marginBottom="378dp"
                            android:text="Choose nail polish"
                            android:textColor="#0E0800"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="373dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="9dp"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="134dp"
                            android:layout_marginEnd="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_marginBottom="344dp"
                            android:entries="@array/nail_option"
                            android:textColor="#FF0000" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/color_chooise"
                        android:layout_width="303dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="168dp"
                        android:layout_marginEnd="76dp"
                        android:layout_marginRight="76dp"
                        android:layout_marginBottom="307dp"
                        android:text="Choose a color"
                        android:textColor="#FA0C0000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Choose a color" />

                    <RelativeLayout
                        android:id="@+id/Upload_color"
                        android:layout_width="203dp"
                        android:layout_height="181dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="77dp"
                        android:layout_marginLeft="77dp"
                        android:layout_marginTop="200dp">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="162dp"
                            android:layout_height="140dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="27dp"
                            android:layout_marginLeft="27dp"
                            android:layout_marginTop="24dp"
                            tools:srcCompat="@tools:sample/avatars[10]" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/Gallery"
                        android:layout_width="310dp"
                        android:layout_height="32dp"
                        android:layout_alignTop="@id/Upload_color"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="215dp"
                        android:layout_marginEnd="75dp"
                        android:layout_marginRight="75dp"
                        android:layout_marginBottom="58dp">

                        <TextView
                            android:id="@+id/upload_Gallery"
                            android:layout_width="178dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginEnd="118dp"
                            android:layout_marginRight="118dp"
                            android:layout_marginBottom="0dp"
                            android:text="Upload from gallery"
                            android:textColor="#0F0000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:layout_width="73dp"
                            android:layout_height="36dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="173dp"
                            android:layout_marginLeft="173dp"
                            android:layout_marginEnd="75dp"
                            android:layout_marginRight="75dp"
                            android:layout_marginBottom="-28dp"
                            android:background="@android:drawable/screen_background_light_transparent"
                            app:srcCompat="@android:drawable/ic_menu_gallery" />

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/to_second_activity"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="62dp"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="82dp"
                android:layout_marginRight="82dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/button"
                    android:layout_width="129dp"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="71dp"
                    android:layout_marginLeft="71dp"
                    android:layout_marginEnd="66dp"
                    android:layout_marginRight="66dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/custom_button"
                    android:text="NEXT"
                    android:textColor="#FFF"
                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>